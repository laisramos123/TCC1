spring:
  application:
    name: auth-client
  profiles:
    active: docker

  security:
    oauth2:
      client:
        registration:
          tpp-client:
            client-id: oauth-client
            client-secret: oauth-client-secret
            authorization-grant-type: authorization_code
            redirect-uri: http://localhost:8081/callback
            scope: openid,accounts,transactions,credit-cards-accounts
        provider:
          tpp-client:
            authorization-uri: http://localhost:8080/oauth2/authorize  # âœ… Navegador
            token-uri: http://auth-server:8080/oauth2/token           # ðŸ”„ CORRIGIR: Container â†’ Container
            user-info-uri: http://auth-server:8080/userinfo           # ðŸ”„ CORRIGIR: Container â†’ Container
            jwk-set-uri: http://auth-server:8080/.well-known/jwks.json # ðŸ”„ CORRIGIR: Container â†’ Container

server:
  port: 8081
  ssl:
    enabled: false

tpp:
  client-id: oauth-client
  client-secret: oauth-client-secret
  redirect-uri: http://localhost:8081/callback
  bank:
    authorization-server: http://auth-server:8080   
    resource-server: http://resource-server:8082   

authorization-server:
  base-url: http://localhost:8080   

logging:
  level:
    com.example.auth_client: DEBUG
    org.springframework.security.oauth2: DEBUG
    org.springframework.web.client: DEBUG