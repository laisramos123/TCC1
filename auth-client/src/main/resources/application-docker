spring:
  application:
    name: auth-client

  security:
    oauth2:
      client:
        registration:
          tpp-client:
            client-id: oauth-client
            client-secret: oauth-client-secret
            authorization-grant-type: authorization_code
            redirect-uri: http://localhost:8081/login/oauth2/code/tpp-client
            scope: openid,accounts,transactions,credit-cards-accounts

        provider:
          tpp-client:
            authorization-uri: http://auth-server:8080/oauth2/authorize
            token-uri: http://auth-server:8080/oauth2/token
            user-info-uri: http://auth-server:8080/userinfo
            jwk-set-uri: http://auth-server:8080/.well-known/jwks.json

server:
  port: 8081
  ssl:
    enabled: false

tpp:
  bank:
    authorization-server: http://auth-server:8080
    resource-server: http://resource-server:8082

logging:
  level:
    com.example.auth_client: DEBUG
    org.springframework.security.oauth2: DEBUG
