# auth-client/src/main/resources/application-docker.yml
spring:
  application:
    name: auth-client

  security:
    oauth2:
      client:
        registration:
          tpp-client:
            client-id: oauth-client
            client-secret: ${CLIENT_SECRET:quantum_secret_2024}
            scope: openid,accounts,transactions
            authorization-grant-type: authorization_code
            redirect-uri: "{baseUrl}/login/oauth2/code/{registrationId}"
            client-name: TPP OAuth Client
            provider: auth-server-provider

        provider:
          auth-server-provider:
            authorization-uri: ${AUTH_SERVER_URL:http://auth-server:8080}/oauth2/authorize
            token-uri: ${AUTH_SERVER_URL:http://auth-server:8080}/oauth2/token
            user-info-uri: ${AUTH_SERVER_URL:http://auth-server:8080}/oauth2/userinfo
            jwk-set-uri: ${AUTH_SERVER_URL:http://auth-server:8080}/.well-known/jwks.json
            user-name-attribute: sub

services:
  resource-server:
    base-url: ${RESOURCE_SERVER_URL:http://resource-server:8082}

server:
  port: 8081

logging:
  level:
    org.springframework.security.oauth2: DEBUG
    com.example.auth_client: DEBUG
  pattern:
    console: "%d{HH:mm:ss.SSS} [%thread] %-5level [%X{traceId},%X{userId}] %logger{36} - %msg%n"
